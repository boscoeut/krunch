    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/ui",
            "console": "integratedTerminal",
            "runtimeExecutable": "/Users/mebert/.nvm/versions/node/v21.5.0/bin/npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run Drift Bot",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/bots/drift",
